
<%= form_for([catalog,catalog.answers.build],remote: true ,html: {id: catalog.id}) do |answer| %>
	<li class ='divider' style="margin-bottom:7px;"></li>
	<%=answer.hidden_field :user_id ,:value => current_user.id %>
	<% if answer?(catalog) %>
		<%= answer.text_area :content ,:value => answer(catalog).content ,id: catalog.id  %>
	<% else %>
		<%= answer.text_area :content , id: catalog.id %>
	<% end %>
<%end %>