<% provide(:title, 'All users') %>
<h1> List Users </h1>

<div class ='center'>
<%= render 'shared/menu' %>

<table class='table table-striped' >
	<thead>
	<tr>
		<th>Status</th>
		<th>Name</th>
		<th>Email</th>
		<th></th>
		<th></th>
	</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%if user.group_id != 0 %>
					<span class="label label-success">Active</span>
					<% else %>
					<span class="label label-important">Deactive</span>
					<% end %>
				</td>
				<td><%= user.name %></td>
				<td><%= user.email %></td>
			
				<td><%= link_to 'Edit','' %></td>
				<td><%= link_to 'Delete','' %></td>
			</tr>
					
			
		<% end %>
	</tbody>
</table>
<%= will_paginate %>
<!--end div user-->
</div> <!--End div center-->


