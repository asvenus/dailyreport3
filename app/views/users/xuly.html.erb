<% provide(:title, 'Report of Users') %>
<h2> Report of
	<%= User.find_by(id: current_user.id).name %>
</h2>
<div class ='center'>
<%= render 'shared/menu' %>
<div class='offset4'>
<table class='table table-striped' >
	<thead>
	<tr>
		<th>The Date</th>
		<th>Question</th>
		<th>Answer</th>
	<%= form_tag(xuly_path, :id => "form123") do %>
		<input type="text" name ="time" value="<%=@time %>" data-date-format="dd/mm/yy" id="dp2">
    <% end %>

    <script>
    $('#dp2').datepicker();
    $('#dp2').change(function(){
    	var form = $('#form123');
    	form.submit();
    });
    </script>
	</thead>
	<tbody>
		<% @answer.each do |answer|%>
		    <%if(answer.updated_at.strftime("%d/%m/%y")==@time)%>
			<tr>
				<td><%= answer.updated_at.strftime("%d/%m/%y") %></td>
				<td><%= Catalog.find_by(id: answer.catalog_id).content %></td>
				<td><%= answer.content %></td>	
			</tr>
			<%else%>
			  	
			<%end%>								
		<% end %>
		<br/><%= link_to 'Export XLS', excel_path(:format => 'xls',:time => @time)%>

	</tbody>
</table>
</div>
<!--end div user-->
</div> <!--End div center-->