<% provide(:title, 'Sign up') %> 
<h1>Sign up</h1>

<div class="row">
	<div class="span6 offset5">

		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>
			
			<%= f.hidden_field(:password, :value => f.password) %>
			<%= f.hidden_field(:password_confirmation, :value => f.password) %>

			<%= f.submit "Create account", class: "btn btn-medium btn-primary" %>
		<% end %>
	</div>

</div>
