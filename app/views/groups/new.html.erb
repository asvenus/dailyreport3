<% provide(:title, 'Create new group') %>
<h2>Create new group</h2>
<div class ='center'>
	<%= render 'shared/menu' %>
	<div class="span5 offset1">
		<%= form_for(@group) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.label :name %>
			<%= f.text_field :name %>
			<%= f.submit "Create group",class: "btn btn-medium btn-primary" %>
		<% end %>
	</div>
</div>

